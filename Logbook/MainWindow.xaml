<Window x:Class="Logbook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Logbook"
        mc:Ignorable="d"
        Title="Logbook" Height="450" Width="800" WindowState="Maximized">


    <DockPanel>
        <Menu DockPanel.Dock="Top" FontSize="12" Padding="0">
            <MenuItem Header="_File">
                <MenuItem Header="_New" />
                <MenuItem Header="_Open" />
                <MenuItem Header="_Save" />
                <Separator />
                <MenuItem Header="_Exit" Name ="ExitMenuItem" Click="ExitMenuItem_Click" />
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Options" Name = "OptionsMenuItem"  Click="OptionsMenuItem_Click" />
            </MenuItem>
            <MenuItem Header="_Logbook">
                <MenuItem x:Name="LogbookAddNewEntryMenuItem" Header="_New entry" Click="LogbookAddNewEntryMenuItem_Click" />
                <Separator />
                <MenuItem Header="_Properties" />
            </MenuItem>
            <MenuItem Header="_Flight planner">
                
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="Fuel consumption calculator" Click="MenuItem_Click" />
                <MenuItem Header=" " />
            </MenuItem>
            <MenuItem Header="_Window">
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Name="AboutMenuItem"  Click="AboutMenuItem_Click" />
            </MenuItem>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom" Background="#FF007ACC">
            <StatusBarItem>
                <TextBlock Name="statusBarText" Foreground="White" />
            </StatusBarItem>
        </StatusBar>
        <ToolBarTray Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" DockPanel.Dock="Top">
            <ToolBar HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="332" Background="#FFF0F0F0">
                <Button Content="Button" Height="25" VerticalAlignment="Top" Width="25"/>
                <Button Content="Button" Height="25" VerticalAlignment="Top" Width="25"/>
                <Button Content="Button" Height="25" VerticalAlignment="Top" Width="25"/>
            </ToolBar>
        </ToolBarTray>
        <DockPanel LastChildFill="False" VerticalAlignment="Top"/>
    </DockPanel>

</Window>
