<Window x:Class="Logbook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Logbook"
        mc:Ignorable="d"
        Title="Logbook" Height="450" Width="800" WindowState="Maximized">
    

        <DockPanel>
        <Menu DockPanel.Dock="Top" Background="#FFF0F0F0">
            <MenuItem Header="_File">
                <MenuItem Header="_New" />
                <MenuItem Header="_Open" />
                <MenuItem Header="_Save" />
                <Separator />
                <MenuItem Header="_Exit" Name ="ExitMenuItem" Click="ExitMenuItem_Click" />
            </MenuItem>
            <MenuItem Header="_Edit">
            </MenuItem>
            <MenuItem Header="_View">
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="Fuel consumption calculator" Click="MenuItem_Click" />
                <MenuItem Header=" " />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Name="AboutMenuItem"  Click="AboutMenuItem_Click" />
            </MenuItem>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Name="statusBarText" />
            </StatusBarItem>
        </StatusBar>
            
        <TextBox AcceptsReturn="True" />
    </DockPanel>

</Window>
