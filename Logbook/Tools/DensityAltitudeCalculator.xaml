<Window x:Class="Logbook.Tools.DensityAltitudeCalculator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Logbook.Tools"
        mc:Ignorable="d"
        Title="Density Altitude Calculator" Height="450" Width="800" Topmost="True" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Button x:Name="ButtonClose" Content="Close" HorizontalAlignment="Right" Margin="0,0,15,0" VerticalAlignment="Center" Grid.Row="1" Width="75" Click="ButtonClose_Click" Height="22"/>
    </Grid>
</Window>
